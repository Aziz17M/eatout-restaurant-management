{% extends 'base.html.twig' %}

{% block title %}Change Password{% endblock %}

{% block body %}
<div class="container">
    <h1>Change Password</h1>

    {% for message in app.flashes('error') %}
        <div class="alert alert-error">{{ message }}</div>
    {% endfor %}

    <div class="form-container">
        {{ form_start(form) }}
            <div class="form-group">
                {{ form_label(form.currentPassword, 'ðŸ”’ Current Password') }}
                {{ form_widget(form.currentPassword) }}
                {{ form_errors(form.currentPassword) }}
            </div>

            <div class="form-group">
                {{ form_label(form.newPassword.first, 'ðŸ”‘ New Password') }}
                {{ form_widget(form.newPassword.first) }}
                {{ form_errors(form.newPassword.first) }}
            </div>

            <div class="form-group">
                {{ form_label(form.newPassword.second, 'ðŸ”‘ Confirm New Password') }}
                {{ form_widget(form.newPassword.second) }}
                {{ form_errors(form.newPassword.second) }}
            </div>

            <div class="form-actions">
                <button type="submit" class="btn btn-primary">ðŸ”’ Change Password</button>
                <a href="{{ path('app_profile') }}" class="btn">Cancel</a>
            </div>
        {{ form_end(form) }}
    </div>
</div>
{% endblock %}
